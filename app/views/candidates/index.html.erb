<h1>候選人列表</h1>

<%= link_to "新增候選人", new_candidate_path %>

<table class="table >
    <tbody>
        <thead>
            <tr>
                <td>投票</td>
                <td>候選人姓名</td>
                <td>年齡</td>
                <td>政黨</td>
                <td>政見</td>
                <td>得票數</td> 
                <td>處理</td>
            </tr>
        </thead>
    <tbody>
        <% @candidates.each do |candidate| %>
        <tr>
            <td><%= link_to "投給這位", vote_candidate_path(candidate), method: "post", data: { confirm: "確定投票？" }, class:"btn btn-danger btn-xd"t %></td>
            <td><%= link_to candidate.name, candidate_path(candidate) %></td>
            <td><%= candidate.age %></td>
            <td><%= candidate.party %></td>
            <td><%= candidate.politics %></td>
            <td><%= candidate.vote_logs.size %></td>
            <td>
                <%=link_to "編輯", edit_candidate_path(candidate) %>
                <%=link_to "刪除", candidate_path(candidate), method: "delete", data: { confirm: "確定刪除嗎?" } %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>

